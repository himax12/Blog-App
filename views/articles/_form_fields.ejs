<div class="form-group">
  <label for="title">Title </label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />

  <label for="title">Description </label>
  <textarea
    required
    value="<%= article.description %>"
    name="description"
    id="description"
    class="form-control"
  ></textarea>
  <label for="title">Markdown </label>
  <textarea
    required
    value="<%= article.markdown %>"
    name="Markdown"
    id="Markdown"
    class="form-control"
  ></textarea>
  <button type="submit" class="btn btn-primary">Save</button>
  <a href="/" class="btn btn-secondary">Cancel</a>
</div>
